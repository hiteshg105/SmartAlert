<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uma.hudss"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS" >
    </uses-permission>

    <application
        android:name="uma.hudss.SmartAlert.SmartAlert"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/WCMaterialTheme" >
        <activity
            android:name="uma.hudss.NewActivity.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uma.hudss.Activity.ContactsChooserActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="uma.hudss.Activity.AboutSmartAlert"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="uma.hudss.SpeakerActivity.SpeakerPitchActivity"
            android:label="@string/app_name"
            android:theme="@style/dialog_light" >
        </activity>

        <receiver android:name="uma.hudss.receiver.SpeakerReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" >
                </action>
            </intent-filter>
        </receiver>
        <receiver android:name="uma.hudss.receiver.IncomingCallReceiverS2R" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" >
                </action>
            </intent-filter>
        </receiver>

        <service android:name="uma.hudss.receiver.TTS" >
        </service>
    </application>

</manifest>