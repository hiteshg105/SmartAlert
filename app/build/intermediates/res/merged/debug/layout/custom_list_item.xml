<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/rlPic"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dip">

            <ImageView
                android:id="@+id/ivPic"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_centerVertical="true"
                android:background="@drawable/image_mask_pressed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxEms="2"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-thin"
                android:text="AB"
                android:textSize="22sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="20dip"
            android:layout_toLeftOf="@+id/rlIcon"
            android:layout_toRightOf="@+id/rlPic">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="sans-serif-thin"
                android:text="TextViewzxcasdcascascascascascascasc"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvName"
                android:layout_below="@+id/tvName"
                android:fontFamily="sans-serif-thin"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="TextView"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip">

            <ImageView
                android:id="@+id/ivRingIcon"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/ring_icon_on" />

            <ImageView
                android:id="@+id/ivTickIcon"
                android:layout_width="22dip"
                android:layout_height="18dip"
                android:layout_toRightOf="@+id/ivRingIcon"
                android:background="@drawable/ring_tick_on" />


        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout><!-- From: file:/Users/hiteshgupta/AndroidStudioProjects/SmartAlert/app/src/main/res/layout/custom_list_item.xml -->